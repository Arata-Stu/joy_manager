<launch>
  
  <!-- joynode -->
  <node pkg="joy" 
        exec="joy_node"
        name="joy_node"
        output="screen">
    <!-- <param name="dev" value="/dev/input/js0"/> -->
    <param name="deadzone" value="0.05"/>
  </node>


  <arg name="teleop_param"  default="$(find-pkg-share joy_manager)/config/teleop.param.yaml"/>
  <!-- joy manager node-->
  <node pkg="joy_manager"
        exec="joy_manager_node"
        name="joy_manager_node"
        output="screen">
        
    <param from="$(var teleop_param)"/>
    <!-- joy -->
    <remap from="/joy" to="/joy"/>
    <!-- 自律走行　コマンド -->
    <remap from="/ackermann_cmd" to="/ackermann_cmd"/>
    <!-- jetracerへの入力 -->
    <remap from="/jetracer/cmd_drive" to="/jetracer/cmd_drive"/> 

    <remap from="/rosbag2_recorder/start" to="/rosbag2_recorder/start"/>
    <remap from="/rosbag2_recorder/stop" to="/rosbag2_recorder/stop"/>

  </node>

  
</launch>